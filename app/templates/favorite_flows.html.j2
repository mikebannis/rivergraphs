    <div class="row mb-0">
    {% for river, gages in rivers.items() %}
        {% for gage in gages %}
            <div class="col-12 col-sm-6 col-xl-4 mb-4">
              <div class="row">
                <h2 class="fs-4"> {{ river }} </h2>
                {%include "show_gage.html.j2" %}
              </div>
            </div>
        {% endfor %}
    {% endfor %}
    </div>
{% endblock %}
